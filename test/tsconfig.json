    "lib": [ "dom", "es2015" ],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "target": "es5",
    "noUnusedLocals": false,
    "typeRoots": [
      "../node_modules/@types"
    ]
