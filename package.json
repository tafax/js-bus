{
  "name": "js-bus",
  "version": "0.0.1",
  "description": "jsBus is a JavaScript library to handle a simple, pluggable and extendable message bus.",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "mocha --compilers ts:ts-node/register --recursive test/unit",
    "test:integration": "mocha --compilers ts:ts-node/register --recursive test/integration",
    "cz:init": "commitizen init cz-conventional-changelog --save-dev --save-exact",
    "package:lint": "ts-npm-lint"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/tafax/js-bus.git"
  },
  "keywords": [
    "typescript",
    "message",
    "command",
    "bus"
  ],
  "author": "Matteo Tafani Alunno",
  "license": "MIT",
  "homepage": "https://bitbucket.org/tafax/js-bus#readme",
  "dependencies": {
    "bluebird": "^3.4.6",
    "lodash": "^4.17.2"
  },
  "devDependencies": {
    "@types/bluebird": "^3.0.35",
    "@types/lodash": "^4.14.42",
    "@types/mocha": "^2.2.33",
    "@types/node": "^6.0.48",
    "@types/should": "^8.1.30",
    "@types/sinon": "^1.16.32",
    "@types/sinon-as-promised": "^4.0.5",
    "cz-conventional-changelog": "^1.2.0",
    "gulp": "^3.9.1",
    "gulp-bump": "^2.5.0",
    "gulp-clean": "^0.3.2",
    "gulp-conventional-changelog": "^1.1.0",
    "gulp-git": "^1.12.0",
    "gulp-sourcemaps": "^2.2.0",
    "gulp-tag-version": "^1.3.0",
    "gulp-typedoc": "^2.0.0",
    "gulp-typescript": "^3.1.3",
    "merge2": "^1.0.2",
    "mocha": "^3.1.2",
    "mocha-typescript": "^1.0.11",
    "run-sequence": "^1.2.2",
    "should": "^11.1.1",
    "should-sinon": "^0.0.5",
    "sinon": "^1.17.6",
    "sinon-as-promised": "^4.0.2",
    "ts-node": "^1.7.0",
    "ts-npm-lint": "^0.1.0",
    "tslint": "^4.0.0",
    "typedoc": "^0.5.1",
    "typescript": "^2.0.10"
  },
  "peerDependencies": {
    "rxjs": "^5.0.0-rc.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
