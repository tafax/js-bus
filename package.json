{
  "name": "js-bus",
  "version": "0.0.4",
  "description": "jsBus is a JavaScript library to handle a simple and extendable message bus.",
  "main": "dist/public_api.js",
  "typings": "dist/public_api.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "lint": "tslint --project tsconfig.json 'src/**/*.ts' -s node_modules/tslint-stylish -t stylish",
    "test": "TS_NODE_CACHE_DIRECTORY='./.ts-node-cache' nyc ./node_modules/.bin/_mocha --opts tests/mocha.opts 'tests/**/*.tests.ts'",
    "package:lint": "ts-npm-lint"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:tafax/js-bus.git"
  },
  "keywords": [
    "typescript",
    "message",
    "command",
    "bus"
  ],
  "author": "Matteo Tafani Alunno <mtafanialunno@vendini.com>",
  "license": "MIT",
  "homepage": "https://github.com/tafax/js-bus",
  "dependencies": {
    "rxjs": "~6.3.3"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/node": "^11.10.4",
    "chai": "^4.2.0",
    "cz-conventional-changelog": "2.1.0",
    "mocha": "^6.0.2",
    "mocha-typescript": "^1.1.17",
    "nyc": "^13.3.0",
    "ts-node": "^8.0.2",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.13.1",
    "tslint-stylish": "^2.1.0",
    "typemoq": "^2.1.0",
    "typescript": "^3.3.3333"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules/",
      "dist/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true,
    "report-dir": "./coverage"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
