{
  "name": "js-bus",
  "version": "0.0.4",
  "description": "jsBus is a JavaScript library to handle a simple, pluggable and extendable message bus.",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "lint": "tslint --project tsconfig.json 'src/**/*.ts' -s node_modules/tslint-stylish -t stylish",
    "test": "yarn run test:unit && yarn run test:integration",
    "test:unit": "TS_NODE_CACHE_DIRECTORY='./.ts-node-cache' _mocha --opts test/mocha.opts 'test/unit/**/*.ts'",
    "test:integration": "TS_NODE_CACHE_DIRECTORY='./.ts-node-cache' _mocha --opts test/mocha.opts 'test/integration/**/*.ts'",
    "cz:init": "commitizen init cz-conventional-changelog --save-dev --save-exact",
    "package:lint": "ts-npm-lint"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:tafax/js-bus.git"
  },
  "keywords": [
    "typescript",
    "message",
    "command",
    "bus"
  ],
  "author": "Matteo Tafani Alunno",
  "license": "MIT",
  "homepage": "https://github.com/tafax/js-bus",
  "dependencies": {
    "bluebird": "^3.4.6",
    "lodash": "^4.17.2",
    "rxjs": "~6.3.3"
  },
  "devDependencies": {
    "@types/bluebird": "^3.0.35",
    "@types/lodash": "^4.14.42",
    "@types/mocha": "^2.2.33",
    "@types/node": "^6.0.48",
    "@types/should": "^8.1.30",
    "@types/sinon": "^1.16.32",
    "@types/sinon-as-promised": "^4.0.5",
    "cz-conventional-changelog": "^1.2.0",
    "gulp": "^3.9.1",
    "gulp-bump": "^2.5.0",
    "gulp-clean": "^0.3.2",
    "gulp-conventional-changelog": "^1.1.0",
    "gulp-git": "^1.12.0",
    "gulp-sourcemaps": "^2.2.0",
    "gulp-tag-version": "^1.3.0",
    "gulp-typedoc": "^2.0.0",
    "gulp-typescript": "^3.1.3",
    "merge2": "^1.0.2",
    "mocha": "^3.1.2",
    "mocha-typescript": "^1.0.11",
    "run-sequence": "^1.2.2",
    "should": "^11.1.1",
    "should-sinon": "^0.0.5",
    "sinon": "^1.17.6",
    "sinon-as-promised": "^4.0.2",
    "ts-node": "^1.7.0",
    "ts-npm-lint": "^0.1.0",
    "tslint": "^5.6.0",
    "tslint-eslint-rules": "^4.1.1",
    "tslint-stylish": "^2.1.0-beta",
    "typedoc": "^0.5.1",
    "typescript": "2.4.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
